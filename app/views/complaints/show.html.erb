<div class="border-form-div">
<p>
  <strong>Section:</strong>
  <%= @complaint.section %>
</p>

<p>
  <strong>Name:</strong>
  <%= @complaint.name %>
</p>

<p>
  <strong>Problem:</strong>
  <%= @complaint.problem %>
</p>

<% if can? :manage, User %>
<p>
  <strong>Created_Time:</strong>
  <%= @complaint.created_at %>
</p>
<% end %>

<p>
  <strong>Status:</strong>
  <%= @complaint.status %>
</p>
 
 <% if can? :manage, User %>
<p>
  <strong>Updated_Time:</strong>
  <%= @complaint.updated_time %>
</p>
<% end %>

<% if can? :manage, User %>
<p>
  <strong>Remarks:</strong>
  <%= @complaint.remarks %>
</p>
<% end %>

<!-- 
<p>
  <strong>User:</strong>
  <%= @complaint.user %>
</p>
-->
 <% if can? :manage, User %>
<%= link_to 'Edit', edit_complaint_path(@complaint), class: 'btn btn-min btn-default' %> |<% end %>
