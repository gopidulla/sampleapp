<div class="row">

<div class="col-xs-6 col-md-4 pull-right">
Register A Complaint? <br><span class="glyphicon glyphicon-hand-right blink_me" aria-hidden="true"></span>
 <span class="blink_me"><%= link_to 'Click Here',  new_complaint_path, class: 'btn btn-min btn-warning' %> </span>
</div>
</div>

<div class="row">
<h1>Complaints</h1>

  </div>


<div class="media">
 
  <div class="media-body">
    <table class="table table-hover">  
     <thead>
    <tr>
    <% if can? :manage, User %>
      <th>Created_Time</th>
      <% end %> 
      <th>Section</th>
      <th>Name</th>
      <th>Problem</th>
     
      <th>Status</th>
      <% if can? :manage, User %>
      <th>Updated_Time</th>
      <% end %> 
      <th>Remarks</th>
    <!--  <th>User</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @complaints.each do |complaint| %>
      <tr>
       <% if can? :manage, User %>
        <td><%= complaint.created_at.strftime("%A, %d %b %Y %l:%M %p") %></td>
        <% end %>
        <td><%= complaint.section %></td>
        <td><%= complaint.name %></td>
        <td><%= complaint.problem %></td>
        
        <td><%= complaint.status %></td>
        
        <% if can? :manage, User %>
        <td><%= complaint.updated_at.strftime("%A, %d %b %Y %l:%M %p") %></td>
        <% end %>
        <td><%= complaint.remarks %></td>
     <!--   <td><%= complaint.user %></td>  -->
 
        <td><%= link_to 'Show', complaint, class: 'btn btn-sm btn-info' %></td>
         
        <% if can? :manage, User %>
        <td><%= link_to 'Edit', edit_complaint_path(complaint), class: 'btn btn-sm btn-success' %></td>
       <% end %>
        <% if can? :manage, User %>
        <td><%= link_to 'Destroy', complaint, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<div class="apple_pagination">
   
    <%= will_paginate @complaints, :container => false %>
  </div>
</div>

